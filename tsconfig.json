{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "resolveJsonModule": true,
        "strict": true,
        "target": "esnext",
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts",
        "./src/**/*.tsx"
     ]
}